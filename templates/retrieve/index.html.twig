        function pagegooo(url) {
            $("#list_all").html('<div class="text-center" style="padding:15px;"><label class="layui-icon layui-icon-loading">努力加载中……</label></div>');
            $.get(url, function (r) {
                    parms = r['parms'];
                    $("html,body").animate({scrollTop: $("#list_all").offset().top - 350}, 500);
                    if (r['ajaxtxt'] == '') {
                        $("#list_all").html('<div class="text-center" style="padding:15px;">抱歉，没有找到相关内容！</div>');
                    } else {
                        $("#list_all").html(r['ajaxtxt']);
                        $('img.lazy').lazyload();
                    }

                    $(".pagination a").click(function (e) {
                        pagegooo($(this).attr('href'));
                        return false;
                    });
                }, 'json'
            );
            return true;
        }

        var ids = 0;
        parms = eval('({"id":' + ids + '})');

